<% if items.present? %>
  <div class="row">
    <% items.each do |item| %>
      <!--<div class="item">-->
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="card card-default">
            <div class="card-header text-center">
              <%= image_tag item.image_url, alt: item.name, style: "width:50%;" %>
            </div>
            <div class="card-body">
              <% if item.persisted? %>
                <p class="card-title"><%= link_to item.name, item %></p>
              <% else %>
                <p class="card-title"><%= item.name %></p>
              <% end %>
              <div class="buttons text-center">
                <% if logged_in? %>
                <div class="d-inline-block"><%= render 'ownerships/want_button', item: item %></div>
                <div class="d-inline-block"><%= render 'ownerships/have_button', item: item %></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <!--</div>-->
    <% end %>
  </div>
<% end %>