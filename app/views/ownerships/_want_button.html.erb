<% if current_user.want?(item) %>
  <%= form_with(url: ownership_path(item.id), method: :delete) do |f| %>
    <%= hidden_field_tag :item_id, item.id, id: "want_id_#{item.id}" %>
    <%= hidden_field_tag :type, 'Want', id: "want_type_#{item.id}" %>
    <%= f.submit 'Want', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_with(url: ownerships_path) do |f| %>
    <%= hidden_field_tag :item_code, item.code, id: "want_id_#{item.id}" %>
    <%= hidden_field_tag :type, 'Want', id: "want_type_#{item.id}" %>
    <%= f.submit 'Want it', class: 'btn btn-primary' %>
  <% end %>
<% end %>